@model List<TraineeViewModel>

@{
    ViewBag.Title = "Διατροφή";
}

<table class="table table-striped table-bordered table-hover" id="trainees-diet-table">
    <thead>
        <tr>
            <th></th>
            <th>Oνομ/νυμο</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var traineeViewModel in Model)
        {
            <tr>
                <td>
                    <button type="button" class="btn-link edit-diet" data-trainee-id="@traineeViewModel.Id"><span class="glyphicon glyphicon-pencil"></span></button>
                </td>
                <td>@traineeViewModel.LastName @traineeViewModel.FirstName</td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="trainee-diet-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

@section scripts{
    @Scripts.Render("~/bundles/diet")
}
