@{
    ViewBag.Title = "Στατιστικά";
}

<table class="table table-striped table-bordered table-hover" id="trainees-statistics-table">
    <thead>
        <tr>
            <th></th>
            <th>Oνομ/νυμο</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var traineeViewModel in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("TraineeExercises", new { id = @traineeViewModel.Id })">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        <span class="sr-only">View</span>
                    </a>
                </td>
                <td>@traineeViewModel.LastName @traineeViewModel.FirstName</td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    @Scripts.Render("~/bundles/statistics")
}


