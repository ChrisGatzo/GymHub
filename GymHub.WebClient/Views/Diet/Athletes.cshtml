@model List<AthleteViewModel>

@{
    ViewBag.Title = "Διατροφή";
}

<table class="table table-striped table-bordered table-hover" id="athletes-diet-table">
    <thead>
        <tr>
            <th></th>
            <th>@Strings.Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var athleteViewModel in Model)
        {
            <tr>
                <td>
                    <button type="button" class="btn-link edit-diet" data-athlete-id="@athleteViewModel.Id"><span class="glyphicon glyphicon-pencil"></span></button>
                </td>
                <td>@athleteViewModel.LastName @athleteViewModel.FirstName</td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="athlete-diet-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

@section scripts{
    @Scripts.Render("~/bundles/diet")
}
