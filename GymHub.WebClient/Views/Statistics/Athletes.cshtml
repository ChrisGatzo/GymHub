@{
    ViewBag.Title = Strings.Statistics;
}

<table class="table table-striped table-bordered table-hover" id="athletes-statistics-table">
    <thead>
        <tr>
            <th></th>
            <th>@Strings.Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var athleteViewModel in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("AthleteExercises", new { id = @athleteViewModel.Id })">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        <span class="sr-only">View</span>
                    </a>
                </td>
                <td>@athleteViewModel.LastName @athleteViewModel.FirstName</td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    @Scripts.Render("~/bundles/statistics")
}


